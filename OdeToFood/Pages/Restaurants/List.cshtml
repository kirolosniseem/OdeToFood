@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restuarants</h1>

<h2>@Model.message</h2>

<form method="Get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Type</th>
    </tr>
    @foreach (var restaurant in Model.restaurants)
    {
<tr>
    <td>@restaurant.Name</td>
    <td>@restaurant.Location</td>
    <td>@restaurant.RestaurantType</td>
    <td><a class="btn fa fa-info" asp-page="./Details" asp-route-restaurantId="@restaurant.Id"></a></td>
    <td><a class="btn fa fa-edit" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id"></a></td>
    <td><a class="btn fa fa-remove" asp-page="./Delete" asp-route-restaurantId="@restaurant.Id"></a></td>
</tr>
    }
</table>

<br />
<a class="btn btn-primary" asp-page="./Edit" >Add new restaurant</a>